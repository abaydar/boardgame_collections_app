<h1><%=@user.name%>'s Collection</h1><br>
<% @user.boardgames.each do |bg| %>
   <h2><%= bg.name %></h2><br>
    <img style="object-fit: contain;" src="<%=bg.image%>" alt="<%=bg.name%>" width="300" height="300"><br>
    <form action="/users/<%=@user.id%>/boardgames/<%=bg.id%>" method="POST">
    <input type="submit" value="Remove from collection" name="boardgame[name]" id="<%=bg.name%>"><br>
    <input type="hidden" value="<%=bg.name%>">
    </form><br>
<%end%>

<div class=user-links>
<%if current_user == @user %>
    <a href="/users/<%=@user.id%>/edit">Add Games to Collection</a><br><br>
    <a href="/users/<%=@user.id%>/delete">Delete Account</a>
<%end%>
</div>
